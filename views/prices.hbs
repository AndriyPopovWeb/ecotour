<div class="row">
    <div class="col-sm-12">
        <button id="btnShow" class="btn btn-primary">Show</button>
        <button id="btnHide" class="btn btn-danger">Hide</button>
    </div>
</div>

<div class="row">
    {{#tours}}
    <div class="col-sm-6 col-md-4 col-lg-3">
        <div class="card">
            <img class="card-img-top" src="http://loremflickr.com/318/180/{{country_en}}" alt="Card image cap">
            <div class="card-body">
                <h4 class="card-title">{{country_uk}}</h4>
                <p class="card-text">Кількість днів: {{days}}</br>Ціна: {{price}}</p>
                <a href="#" class="btn btn-primary">Перейти</a>
            </div>
        </div>        
    </div>
    {{/tours}}
</div>
<form class="form" role="form" method="post" action="country">
    <input type="hidden" name="hid" id="hid" value="{{country._id}}">
    <div class="form-group">
        <label for="country" class="col-sm-2 form-control-label">Країна</label>
        <input type="text" class="form-control" id="country" name="country" required="required"
        placeholder="Назва країни" value="{{country.country}}">
    </div>

    <div class="form-group">
        <label for="capital" class="col-sm-2 form-control-label">Столиця</label>
        <input type="text" class="form-control" id="capital" name="country_uk"  required="required"
        placeholder="Назва столиці" value="{{country.capital}}">
    </div>

    <div class="form-group">
        <label for="content" class="col-sm-2 form-control-label">Опис</label>
        <input type="text" class="form-control" id="content" name="content"  required="required"
        placeholder="Опис" value="{{country.content}}">
    </div>

       </div>

    <div class="form-group">        
        <button type="submit" class="btn btn-primary">Зберегти</button>
        <a href="/admin/countrys" class="btn btn-danger">Скасувати</a>
    </div>
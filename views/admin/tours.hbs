<div class="row">
    <div class="col-md-1">
        &nbsp;
    </div>
    <div class="col-md-10">
        <a href="./tour?action=new" style="width:100%" class="btn btn-success">Додати тур</a>
    </div>
    <div class="col-md-1">
        &nbsp;
    </div>
</div>        
<div class="row">
    <div class="col-md-12">
        <table class="table tablesorter" id="tourstable">
            <thead class="thead-inverse">
                <tr>
                    <th>Назва туру</th>
                    <th>Ціна</th>
                    <th>Днів</th>
                    <th>&nbsp;</th>
                    <th>&nbsp;</th>
                </tr>
            </thead>
            <tbody>
                {{#tours}}
                <tr>
                    <td>{{country_uk}}</td>
                    <td>{{price}}</td>
                    <td>{{days}}</td>
                    <td class="col-btn"><a href="./tour?action=edit&id={{_id}}" class="btn btn-primary">Ред.</a></td>
                    <td class="col-btn"><a href="./tour?action=delete&id={{_id}}" class="btn btn-danger">Вид.</a></td>
                </tr>
                {{/tours}}
            </tbody>
        </table>
    </div>
</div>
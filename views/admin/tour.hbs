<form class="form" role="form" method="post" action="tour">
    <input type="hidden" name="hid" id="hid" value="{{tour._id}}">
    <div class="form-group">
        <label for="country_en" class="col-sm-2 form-control-label">Країна (анг.)</label>
        <input type="text" class="form-control" id="country_en" name="country_en" required="required"
        placeholder="Назва країни" value="{{tour.country_en}}">
    </div>

    <div class="form-group">
        <label for="country_uk" class="col-sm-2 form-control-label">Країна (укр.)</label>
        <input type="text" class="form-control" id="country_uk" name="country_uk"  required="required"
        placeholder="Назва країни" value="{{tour.country_uk}}">
    </div>

    <div class="form-group">
        <label for="days" class="col-sm-2 form-control-label">Дні</label>
        <input type="number" class="form-control" id="days" name="days"  required="required"
        placeholder="1" value="{{tour.days}}">
    </div>

    <div class="form-group">
        <label for="price" class="col-sm-2 form-control-label">Ціна</label>
        <input type="text" class="form-control" id="price" name="price"  required="required"
        placeholder="123" value="{{tour.price}}">
    </div>

    <div class="form-group">        
        <button type="submit" class="btn btn-primary">Зберегти</button>
        <a href="/admin/tours" class="btn btn-danger">Скасувати</a>
    </div>
{{#section 'header'}}
{{/section}}

<div class="row">
    <div class="col-md-1">
        &nbsp;
    </div>
    <div class="col-md-10">
        <button type="button" class="btn btn-primary" id="addCurrency">Додати валюту</button>
    </div>
    <div class="col-md-1">
        &nbsp;
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <table class="table tablesorter" id="moneytable">
            <thead class="thead-inverse">
                <tr>
                    <th class="table_header">Id</th>
                    <th class="table_header">Назва валюти</th>
                    <th class="table_header">Ціна</th>
                    <th class="table_header">Дата</th>
                    <th class="table_header">&nbsp;</th>
                    <th class="table_header">&nbsp;</th>
                </tr>
            </thead>
            <tbody>
                
            </tbody>
        </table>
    </div>
</div>

<!-- Modal adding -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Створення валюти</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
<form style="margin:15px">          
    <div class="form-group">
        <label for="addcurrencyName" class="col-sm-2 form-control-label">Назва валюти</label>
        <input type="text" class="form-control" id="addcurrencyName" name="addcurrencyName" required="required"
        placeholder="Назва валюти" value="">
    </div>

    <div class="form-group">
        <label for="addcurrencyPrice" class="col-sm-2 form-control-label">Ціна</label>
        <input type="number" class="form-control" id="addcurrencyPrice" name="addcurrencyPrice"  required="required"
        placeholder="Ціна" value="">
    </div>

    <div class="form-group">
        <label for="adddate" class="col-sm-2 form-control-label">Дата</label>
        <input type="date" class="form-control" id="adddate" name="adddate"  required="required"
        placeholder="Дата" value="">
    </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Вихід</button>
        <button type="button" class="btn btn-primary" id="addbtn">Додати валюту</button>
      </div>
    </div>
  </div>
</div>

<!-- Modal mod -->
<div class="modal fade" id="myModalmod" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Редагувати валюту</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
<form style="margin:15px">          
          <input type="hidden" name="hid" id="hidMod" value="">
    <div class="form-group">
        <label for="modcurrencyName" class="col-sm-2 form-control-label">Назва валюти</label>
        <input type="text" class="form-control" id="modcurrencyName" name="modcurrencyName" required="required"
        placeholder="Назва валюти" value="">
    </div>

    <div class="form-group">
        <label for="modcurrencyPrice" class="col-sm-2 form-control-label">Ціна</label>
        <input type="number" class="form-control" id="modcurrencyPrice" name="modcurrencyPrice"  required="required"
        placeholder="Ціна" value="">
    </div>

        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Вихід</button>
        <button type="button" class="btn btn-primary" id="modbtn">Зберегти зміни</button>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="myModaldel" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Видалити валюту</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
          <input type="hidden" name="hid" id="hidDel" value="">
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Ні</button>
        <button type="button" class="btn btn-primary" id="delModalbtn">Так</button>
      </div>
    </div>
  </div>
</div>

{{#section 'scripts'}}
<script src="/vendor/jquery.tablesorter/dist/js/jquery.tablesorter.min.js"></script>
<script src="/javascripts/admin/money.js"></script>
{{/section}}
